  "main_section_html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n  <meta charset=\"UTF-8\"/>\n  <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\"/>\n  <title>Sign Up - Roslab</title>\n  <link href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css\" rel=\"stylesheet\"/>\n  <meta name=\"csrf-token\" content=\"{{ csrf_token }}\">\n   <style>\n        * {\n            margin: 0;\n            padding: 0;\n            box-sizing: border-box;\n        }\n\n        body {\n            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n            min-height: 100vh;\n            display: flex;\n            align-items: center;\n            justify-content: center;\n            padding: 2rem;\n        }\n\n        .signup-container {\n            background: white;\n            border-radius: 15px;\n            box-shadow: 0 15px 35px rgba(0,0,0,0.1);\n            padding: 3rem;\n            width: 100%;\n            max-width: 500px;\n            animation: slideUp 0.8s ease-out;\n        }\n\n        .logo {\n            text-align: center;\n            margin-bottom: 2rem;\n        }\n\n        .logo i {\n            font-size: 3rem;\n            color: #667eea;\n            margin-bottom: 1rem;\n        }\n\n        .logo h1 {\n            color: #333;\n            font-size: 2rem;\n            margin-bottom: 0.5rem;\n        }\n\n        .logo p {\n            color: #666;\n            font-size: 1rem;\n        }\n\n        .form-group {\n            margin-bottom: 1.5rem;\n        }\n\n        .form-group label {\n            display: block;\n            margin-bottom: 0.5rem;\n            color: #333;\n            font-weight: 500;\n        }\n\n        .form-group input,\n        .form-group select {\n            width: 100%;\n            padding: 0.75rem;\n            border: 2px solid #e1e5e9;\n            border-radius: 8px;\n            font-size: 1rem;\n            transition: border-color 0.3s;\n        }\n\n        .form-group input:focus,\n        .form-group select:focus {\n            outline: none;\n            border-color: #667eea;\n        }\n\n        .user-type-grid {\n            display: grid;\n            grid-template-columns: 1fr 1fr;\n            gap: 1rem;\n            margin-top: 0.5rem;\n        }\n\n        .user-type-option {\n            position: relative;\n        }\n\n        .user-type-option input[type=\"radio\"] {\n            opacity: 0;\n            position: absolute;\n        }\n\n        .user-type-label {\n            display: block;\n            padding: 1rem;\n            border: 2px solid #e1e5e9;\n            border-radius: 8px;\n            text-align: center;\n            cursor: pointer;\n            transition: all 0.3s;\n            background: #f8f9fa;\n        }\n\n        .user-type-label:hover {\n            border-color: #667eea;\n            background: #f0f2ff;\n        }\n\n        .user-type-option input[type=\"radio\"]:checked + .user-type-label {\n            border-color: #667eea;\n            background: #667eea;\n            color: white;\n        }\n\n        .user-type-label i {\n            font-size: 1.5rem;\n            margin-bottom: 0.5rem;\n            display: block;\n        }\n\n        .btn {\n            width: 100%;\n            padding: 0.75rem;\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n            color: white;\n            border: none;\n            border-radius: 8px;\n            font-size: 1.1rem;\n            font-weight: 500;\n            cursor: pointer;\n            transition: transform 0.3s;\n            margin-bottom: 1rem;\n        }\n\n        .btn:hover {\n            transform: translateY(-2px);\n        }\n\n        .login-link {\n            text-align: center;\n            color: #666;\n        }\n\n        .login-link a {\n            color: #667eea;\n            text-decoration: none;\n            font-weight: 500;\n        }\n\n        .login-link a:hover {\n            text-decoration: underline;\n        }\n\n        .back-home {\n            position: absolute;\n            top: 2rem;\n            left: 2rem;\n            color: white;\n            text-decoration: none;\n            font-size: 1.1rem;\n            transition: opacity 0.3s;\n        }\n\n        .back-home:hover {\n            opacity: 0.8;\n        }\n\n        @keyframes slideUp {\n            from {\n                opacity: 0;\n                transform: translateY(30px);\n            }\n            to {\n                opacity: 1;\n                transform: translateY(0);\n            }\n        }\n\n        @media (max-width: 768px) {\n            .signup-container {\n                padding: 2rem;\n                margin: 1rem;\n            }\n\n            .user-type-grid {\n                grid-template-columns: 1fr;\n            }\n\n            .back-home {\n                position: relative;\n                top: auto;\n                left: auto;\n                display: block;\n                text-align: center;\n                margin-bottom: 2rem;\n                color: white;\n            }\n        }\n    </style>\n</head>\n<body>\n<a href=\"/\" class=\"back-home\">\n  <i class=\"fas fa-arrow-left\"></i> Back to Home\n</a>\n\n<div class=\"signup-container\">\n  <div class=\"logo\">\n    <i class=\"fas fa-robot\"></i>\n    <h1>Join Roslab</h1>\n    <p>Create your account to get started</p>\n  </div>\n\n  <form id=\"signupForm\">\n    <div class=\"form-group\">\n      <label for=\"name\">Full Name</label>\n      <input type=\"text\" id=\"name\" name=\"name\" required placeholder=\"Enter your full name\">\n    </div>\n\n    <div class=\"form-group\">\n      <label for=\"email\">Email Address</label>\n      <input type=\"text\" id=\"email\" name=\"email\" required placeholder=\"Enter your email or username\">\n    </div>\n\n    <div class=\"form-group\">\n      <label for=\"password\">Password</label>\n      <input type=\"password\" id=\"password\" name=\"password\" required placeholder=\"Create a password\">\n    </div>\n\n    <div class=\"form-group\">\n      <label>I am a:</label>\n      <div class=\"user-type-grid\">\n        <div class=\"user-type-option\">\n          <input type=\"radio\" id=\"student\" name=\"userType\" value=\"Student\" required>\n          <label for=\"student\" class=\"user-type-label\">\n            <i class=\"fas fa-user-graduate\"></i>\n            Student\n          </label>\n        </div>\n        <div class=\"user-type-option\">\n          <input type=\"radio\" id=\"teacher\" name=\"userType\" value=\"Teacher\" required>\n          <label for=\"teacher\" class=\"user-type-label\">\n            <i class=\"fas fa-chalkboard-teacher\"></i>\n            Teacher\n          </label>\n        </div>\n        <div class=\"user-type-option\">\n          <input type=\"radio\" id=\"rosi\" name=\"userType\" value=\"ROSI\" required>\n          <label for=\"rosi\" class=\"user-type-label\">\n            <i class=\"fas fa-cogs\"></i>\n            ROSI\n          </label>\n        </div>\n        <div class=\"user-type-option\">\n          <input type=\"radio\" id=\"anya\" name=\"userType\" value=\"ANYA\" required>\n          <label for=\"anya\" class=\"user-type-label\">\n            <i class=\"fas fa-crown\"></i>\n            ANYA\n          </label>\n        </div>\n      </div>\n    </div>\n\n    <button type=\"submit\" class=\"btn\">Create Account</button>\n  </form>\n\n  <div class=\"login-link\">\n    Already have an account? <a href=\"/login\">Sign in here</a>\n  </div>\n</div>\n\n<script>\n  function getCSRFToken() {\n    const csrfTokenMeta = document.querySelector('meta[name=\"csrf-token\"]');\n    return csrfTokenMeta ? csrfTokenMeta.getAttribute('content') : '';\n  }\n\n  document.getElementById('signupForm').addEventListener('submit', async function (e) {\n    e.preventDefault();\n\n    const fullName = document.getElementById('name').value.trim();\n    const email = document.getElementById('email').value.trim();\n    const password = document.getElementById('password').value;\n    const userType = document.querySelector('input[name=\"userType\"]:checked')?.value;\n\n    if (!fullName || !email || !password || !userType) {\n      alert(\"Please fill all fields.\");\n      return;\n    }\n\n    try {\n      // Step 1: Call sign_up with CSRF token\n      const signupResponse = await fetch(\"/api/method/frappe.auth.sign_up\", {\n        method: \"POST\",\n        headers: {\n          \"Content-Type\": \"application/json\",\n          \"X-Frappe-CSRF-Token\": getCSRFToken()\n        },\n        body: JSON.stringify({\n          email: email,\n          full_name: fullName,\n          redirect_to: \"/\"\n        })\n      });\n\n      const signupResult = await signupResponse.json();\n      if (!signupResponse.ok || signupResult.exc) {\n        throw new Error(signupResult.message || \"Signup failed.\");\n      }\n\n      // Step 2: Login the user\n      const loginResponse = await fetch(\"/api/method/login\", {\n        method: \"POST\",\n        headers: {\n          \"Content-Type\": \"application/json\",\n          \"X-Frappe-CSRF-Token\": getCSRFToken()\n        },\n        body: JSON.stringify({\n          usr: email,\n          pwd: password\n        })\n      });\n\n      const loginResult = await loginResponse.json();\n      if (!loginResponse.ok || loginResult.exc) {\n        throw new Error(loginResult.message || \"Login failed.\");\n      }\n\n      // Step 3: Redirect based on role\n      const dashboards = {\n        Student: \"/student-dashboard\",\n        Teacher: \"/teacher-dashboard\",\n        ROSI: \"/rosi-dashboard\",\n        ANYA: \"/anya-dashboard\"\n      };\n\n      window.location.href = dashboards[userType] || \"/\";\n    } catch (err) {\n      alert(\"‚ö†Ô∏è \" + err.message);\n    }\n  });\n</script>\n</body>\n</html>\n",
